<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
package="com.example.chen.memo">

<application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/AppTheme.NoActionBar"
    android:name=".MyApplication"
    >
    <activity
        android:name=".MainActivity"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.NoActionBar">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
    <activity android:name=".DiaryActivity"
        android:windowSoftInputMode="adjustResize"
        ></activity>
    <activity android:name=".ViewDiaryActivity"></activity>
    <activity
        android:name=".DetailActivity"
        android:windowSoftInputMode="adjustResize"
        ></activity>
    <activity android:name=".MemoActivity">
        <receiver
            android:name=".OneShotAlarm"
            android:process=":remote" />
    </activity>
    <activity android:name=".ViewMemoActivity"></activity>
    <activity android:name=".NewActActivity"></activity>
    <activity android:name=".SettingsActivity"></activity>
    <activity android:name=".ViewCipherActivity"></activity>
    <activity android:name=".CipherDetailActivity"></activity>
    <activity android:name=".MusicActivity"></activity>
    <receiver android:name="com.example.chen.memo.MyReceiver" />
</application>
<uses-permission android:name="android.permission.VIBRATE"/>
<uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
<uses-permission android:name="android.permission.SET_TIME_ZONE"/>
<uses-permission android:name="android.permission.WAKE_LOCK" />
<uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
</manifest>
